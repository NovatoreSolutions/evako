        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="10dp"-->
        <!--android:layout_below="@+id/imageview"-->
        <!--android:background="@color/grey"-->
        <!--&gt;-->

    <!--</LinearLayout>-->
</RelativeLayout>