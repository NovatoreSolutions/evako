<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="185dp"
    android:layout_width="275dp"
    android:background="@drawable/pager_layout_xml"
    android:id="@+id/mainbacktocorners"
    android:orientation="vertical"
     >


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="275dp"
        android:layout_height="match_parent"
        android:id="@+id/sliderInnerLayoutHead"
        android:background="@color/white"
        android:clipToPadding="true"
        android:layout_margin="1dp"

        >



        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="180dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:id="@+id/sliderInnerLayoutImage"
            android:src="@drawable/akka"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            android:layout_marginBottom="30dp"
            android:visibility="gone"

            />
    <RelativeLayout
        android:layout_width="275dp"
        android:layout_height="120dp"
        android:id="@+id/innerlayoutback"
        android:visibility="visible"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"

        >
        <RelativeLayout
            android:layout_width="43dp"
            android:layout_height="25dp"
            android:background="@drawable/slide_corner"
            android:layout_alignParentRight="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:layout_marginRight="-2dp"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="10dp"
                android:layout_height="10dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/whitepic"
                />


        </RelativeLayout>


    </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/sliderInnerLayoutInner"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/sliderInnerLayoutTitleImage"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:civ_border_width="4dp"
                app:civ_border_color="@color/pluslightgrey"
                android:alpha="0.6"

                />
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/slider_image_one_logo"
                app:civ_border_width="0dp"
                app:civ_border_color="@color/pluslightgrey"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="2.7dp"

                />
            <TextView
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:id="@+id/price"
                android:textSize="15dp"
                android:text="4.2"
                android:layout_below="@+id/sliderInnerLayoutTitleImage"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/price_item_xml"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="6dp"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brandName"
                android:text="The Par"
                android:layout_toRightOf="@id/sliderInnerLayoutTitleImage"
                android:layout_marginTop="35dp"
                android:textSize="15dp"
                android:textColor="@color/blackPure"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/branddescription"
                android:text="Alkarama, Dubai, United Arab Emirates"
                android:layout_below="@+id/brandName"
                android:layout_toRightOf="@+id/price"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="6dp"
                android:textColor="@color/desColor"
                />
        </RelativeLayout>


    </RelativeLayout>



</LinearLayout>
